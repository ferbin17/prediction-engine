<div class="card text-center match-card locked_match">
  <div class="card-header match-link">
    <strong id="match-link-lg"><%= link_to user_prediction.user.full_name, user_path(user_prediction.user) %></strong>
    <strong id="match-link-sm"><%= link_to user_prediction.user.full_name, user_path(user_prediction.user) %></strong>
  </div>
  <div class="card-body">
    <div class="match-details">
      <div class="home-team team"><%= match.home_team.full_name %></div>
      <div class="scoreline">
        <div class="quantity quantity-div-left">
          <input type="text" name="home_team_score" value="<%= user_prediction.home_team_score %>" side="left" disabled readonly>
        </div>
        <div class="seperator"></div>
        <div class="quantity quantity-div-right">
          <input type="text" name="away_team_score" value="<%= user_prediction.away_team_score %>" side="right" disabled readonly>
        </div>
      </div>
      <div class="away-team team"><%= match.away_team.full_name %></div>
    </div>
  </div>
  <div class="card-footer text-muted">
    <% if match.match_ended? && match.score_submitted? %>
      <%= t(:match_score) %>: <strong><%= "#{match.home_team_score} - #{match.away_team_score}" %></strong><br>
      <% if match.score_calculated? && user_prediction.point_calculated? %>
        <%= t(:user_score, user: user_prediction.user.full_name) %>: <strong><%= "#{user_prediction.score}" %></strong><br>
      <% end %>
    <% else %>
      <%= t(:match_prediction_point_not_calculated_yet) %><br>
    <% end %>
  </div>
</div>