<%= form_for match, url: {action: :submit_score}, remote: true, class: "row g-3 needs-validation" do |f| %>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= t(:submit_match_score) %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="$('#form-modal').hide()"></button>
      </div>
      <div class="modal-body" id="validation-errors">
      </div>
      <div class="modal-body">
        <div class="card">
          <div class="card-body">
            <div class="mb-3 row">
              <label for="inputHometeamscore" class="col-sm-5 col-form-label">
                <%= match.home_team.full_name %>
              </label>
              <div class="col-sm-7">
                <%= f.number_field :home_team_score, min: 0, class: "form-control",
                    id: "inputHometeamscore", required: true %>
              </div>
            </div>
            
            <div class="mb-3 row">
              <label for="inputAwayteamscore" class="col-sm-5 col-form-label">
                <%= match.away_team.full_name %></label>
              <div class="col-sm-7">
                <%= f.number_field :away_team_score, min: 0, class: "form-control",
                    id: "inputAwayteamscore", required: true %>
  
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit t(:submit), data: {confirm: t(:are_you_sure) }, class: "btn btn-primary btn-sm" %>
      </div>
    </div>
  </div>
<% end %>
