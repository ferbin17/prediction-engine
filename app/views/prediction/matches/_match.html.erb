<div class="col" id="match-<%= match.id %>-user-<%= @current_user.id %>">
  <div class="card shadow-sm">
    <div class="card-body">
      <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <% if mode %>
            <%= link_to t(:mark_as_match_ended), edit_match_path(id: match.id),
                remote: true, data: {confirm: "Are you sure ?"},
                class: "btn btn-sm btn-outline-secondary" %>
            <%= link_to t(:submit_match_score), edit_match_path(id: match.id),
                remote: true, class: "btn btn-sm btn-outline-secondary" %>
            <%= link_to t(:calculate_prediction_score), edit_match_path(id: match.id),
                remote: true, data: {confirm: "Are you sure ?"},
                class: "btn btn-sm btn-outline-secondary" %>
          <% else %>
            <%= link_to t(:edit_match), edit_match_path(id: match.id),
                remote: true, class: "btn btn-sm btn-outline-secondary" %>
            <%= link_to t(:delete_match), match_path(id: match.id),
                method: :delete, remote: true, data: {confirm: "Are you sure ?"}, 
                class: "btn btn-sm btn-outline-secondary" %>
            <%= link_to "#{(match.is_active? ? t(:unconfirm) : t(:confirm))} #{t(:match)}",
                confirm_match_match_path(id: match.id), remote: true,
                data: {confirm: "Are you sure ?"},
                class: "btn btn-sm btn-outline-secondary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>