<div class="accordion-item" id="competetion-<%= competetion.id %>-user-<%= @current_user.id %>">
  <h2 class="accordion-header" id="heading-c-<%= competetion.id %>">
    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-c-<%= competetion.id %>" aria-expanded="true" aria-controls="collapse-c-<%= competetion.id %>">
      <%= competetion.name %>
    </button>
  </h2>
  <div id="collapse-c-<%= competetion.id %>" class="accordion-collapse collapse" aria-labelledby="heading-c-<%= competetion.id %>" data-bs-parent="#accordionCompetetion">
    <div class="accordion-body">
      <ul class="nav justify-content-center">
        <li class="nav-item">
          <%= link_to t(:edit_competetion), edit_competetion_setting_path(id: competetion.id),
              remote: true, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to t(:add_phase), create_phase_setting_path(id: competetion.id),
              remote: true, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to t(:delete_competetion), delete_competetion_setting_path(id: competetion.id),
              method: :delete, remote: true, data: {confirm: "Are you sure ?"}, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to (competetion.is_active ? t(:deactivate) : t(:activate)),
              change_competetion_status_setting_path(id: competetion.id),
              remote: true, data: {confirm: "Are you sure ?"}, class: "nav-link" %>
        </li>
        <li class="nav-item">
        </li>
      </ul>
      <div class="accordion" id="accordionPhases">
        <% competetion.phases.each do |phase| %>
          <%= render partial: "phase", locals: {phase: phase} %>
        <% end %>
      </div>
    </div>
  </div>
</div>