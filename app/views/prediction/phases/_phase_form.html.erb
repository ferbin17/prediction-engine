<%= form_for phase, remote: true, class: "row g-3 needs-validation" do |f| %>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= phase.id.nil? ? t(:new_phase) : t(:edit_phase) %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="$('#form-modal').hide()"></button>
      </div>
      <div class="modal-body" id="validation-errors">
      </div>
      <div class="modal-body">
        <div class="card">
          <div class="card-body">
            <div class="mb-3 row">
              <label for="inputName" class="col-sm-5 col-form-label"><%= t(:name) %></label>
              <div class="col-sm-7">
                <%= f.text_field :name, class: "form-control", id: "inputName", required: true %>
              </div>
            </div>
            
            <div class="mb-3 row">
              <label for="inputOrder" class="col-sm-5 col-form-label"><%= t(:order) %></label>
              <div class="col-sm-7">
                <%= f.number_field :order, min: 0, value: phase.order||@next_order, class: "form-control", id: "inputOrder" %>
              </div>
            </div>
            
            <div class="mb-3 row">
              <label for="inputNoofMatches" class="col-sm-5 col-form-label"><%= t(:no_of_matches) %></label>
              <div class="col-sm-7">
                <%= f.number_field :no_of_matches, min: 0, class: "form-control", id: "inputNoofMatches" %>
                <%= f.hidden_field :competetion_id %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <% button_name = (phase.id.nil? ? :create : :save) %>
        <%= f.submit t(button_name), class: "btn btn-primary btn-sm" %>
      </div>
    </div>
  </div>
<% end %>
