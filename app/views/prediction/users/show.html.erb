<div class="container inner-container user-profile-container">
  <div class="album">
    <div class="container">
      <div class="row g-3" id="userProfile">
        <div class="col">
          <div class="card shadow-sm">
            <div class="card-body">          
              <div class="form-signin text-center user-profile-show">
                <h1 class="h3 mb-3 fw-normal"> <%= @user.full_name %></h1>
                <div class="form-floating">
                  <%= text_field_tag :username, @user.username, class: "form-control",
                      id: "inputUsername", disabled: true %>
                  <label for="inputUsername"><%= t(:username) %></label>
                </div>
                  
                <div class="form-floating">
                  <%= text_field_tag :phone_no, @user.phone_no, class: "form-control",
                      id: "inputPhone", disabled: true %>
                  <label for="inputPhone"><%= t(:phone_no) %></label>
                </div>
              </div>
              
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to t(:edit_details), edit_user_path(id: @user.id),
                      class: "btn btn-sm btn-outline-secondary" %>
                  <%= link_to t(:reset_password), reset_password_user_path(id: @user.id),
                      data: {confirm: "Are you sure ?"},
                      class: "btn btn-sm btn-outline-secondary" %>
                  <%= link_to t(:delete_user), user_path(id: @user.id),
                      method: :delete, data: {confirm: "Are you sure ?"},
                      class: "btn btn-sm btn-outline-secondary" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>