<div class="container inner-container user-profile-container">
  <div class="album">
    <div class="container">
      <div class="row g-3" id="userProfile">
        <div class="col">
          <div class="card shadow-sm">
            <div class="card-body">          
              <%= render partial: "user_details", locals: {user: @user} %>
              
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <% if @current_user.is_admin? %>
                    <%= link_to t(:edit_details), edit_user_path(@user.id),
                        class: "btn btn-sm btn-outline-secondary" %>
                    <%= link_to t(:reset_password), reset_password_user_path(@user.id),
                        data: {confirm: t(:are_you_sure)},
                        class: "btn btn-sm btn-outline-secondary" %>
                    <%= link_to t(:delete_user), user_path(@user.id),
                        method: :delete, data: {confirm: t(:are_you_sure)},
                        class: "btn btn-sm btn-outline-secondary" %>
                  <% end %>
                  <%= link_to t(:predictions), predictions_user_path(@user.id),
                      class: "btn btn-sm btn-outline-secondary" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>