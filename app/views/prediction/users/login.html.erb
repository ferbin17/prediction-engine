<main class="form-signin text-center">
  <%= form_for :user, url: {action: :login}, class: "row g-3" do |f| %>
    <%= image_tag "prediction/footy-boyz-icon.jpg", class: "mb-4", alt: "footy-boyz-icon", width: "50%", height: "100%" %>
    <h1 class="h3 mb-3 fw-normal"> <%= "#{t(:please)} #{t(:sign_in)}" %></h1>

    <div class="form-floating">
      <%= f.text_field :username, class: "form-control", id: "inputUsername", placeholder: t(:username), autocomplete: "off", required: true %>
      <label for="inputUsername"><%= t(:username) %></label>
    </div>
    
    <div class="form-floating">
      <%= f.password_field :password, class: "form-control", id: "inputPassword", placeholder: t(:password), required: true %>
      <label for="inputPassword"><%= t(:password) %></label>
    </div>

    <div class="checkbox mb-3">
      <label>
        <%= hidden_field_tag "user[remember_me]", 0 %>
        <%= check_box_tag "user[remember_me]", 1, !@user.new_record? %> <%= t(:remember_me) %>
      </label>
    </div>
    <button class="w-100 btn btn-lg btn-primary" type="submit"><%= t(:sign_in) %></button>
    <p class="mt-5 mb-3 text-muted">&copy; Footy Boyz 2021</p>
  <% end %>
</main>
